<Window x:Class="Domotica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border x:Name="panel" Width="200" Height="300" Background="White"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Subir Persiana" Width="100" Click="SubirPersiana_Click"/>
                <Button Content="Bajar Persiana" Width="100" Click="BajarPersiana_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
